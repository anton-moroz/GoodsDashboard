{% extends 'layout/app.html.twig' %}

{% block title %}
    {{ 'text.user.settings.account'|trans }}
{% endblock %}

{% block app_header %}
    <h2 class="font-semibold text-xl text-gray-800 leading-tight">
        {{ 'text.settings'|trans }}
    </h2>
{% endblock %}

{% block app_content %}
    <div class="font-sans text-gray-900 antialiased">
        <div class="min-h-screen-34-1 flex flex-col sm:justify-center items-center pt-6 sm:pt-0 bg-gray-100">
            <div class="w-full sm:max-w-md px-6 py-4 bg-white shadow-md overflow-hidden sm:rounded-lg">
                <h1 class="text-2xl text-center font-bold mb-6">{{ 'text.user.settings.account'|trans }}</h1>

                {{ form_start(userSettingsEditForm) }}
                {{ form_row(userSettingsEditForm.username) }}
                {{ form_row(userSettingsEditForm.plainPassword, { label: 'text.user.password'|trans }) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('settings_update') }}">

                <div class="flex items-center justify-end">
                    {{ include('components/common/btn-submit.html.twig', { transKey: 'text.user.settings.update' }) }}
                </div>

                {{ form_end(userSettingsEditForm) }}
            </div>
        </div>
    </div>
{% endblock %}